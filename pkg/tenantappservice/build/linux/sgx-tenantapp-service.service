[Unit]
Description=sgx-tenantapp-service

[Service]
Type=simple
User=sgx-tenantapp-service
Group=sgx-tenantapp-service
ExecStart=/usr/bin/sgx-tenantapp-service run
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
Restart=on-failure
PermissionsStartOnly=true
RuntimeDirectory=sgx-tenantapp-service
RuntimeDirectoryMode=0775

[Install]
WantedBy=multi-user.target