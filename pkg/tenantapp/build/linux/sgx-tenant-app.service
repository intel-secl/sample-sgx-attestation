[Unit]
Description=sgx-tenant-app

[Service]
Type=simple
User=sgx-tenant-app
Group=sgx-tenant-app
ExecStart=/usr/bin/sgx-tenant-app run
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
Restart=on-failure
PermissionsStartOnly=true
RuntimeDirectory=sgx-tenant-app
RuntimeDirectoryMode=0775

[Install]
WantedBy=multi-user.target